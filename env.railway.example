# Railway Environment Variables Example
# Copy this file and configure for each service on Railway
# Each service only needs its relevant variables

# ============================================================
# CORE CALENDAR API (root Dockerfile)
# ============================================================
DATABASE_URL=postgresql://user:pass@host:5432/calendar_booking_db
SERVICE_API_KEY=your-secure-api-key-here
GOOGLE_CALENDAR_CREDENTIALS_PATH=./credentials/service-account.json
GOOGLE_CALENDAR_DELEGATED_ADMIN_EMAIL=admin@yourdomain.com
WEBHOOK_BASE_URL=https://your-core-api.railway.app
GOOGLE_CALENDAR_WEBHOOK_SECRET=your-webhook-secret
DEFAULT_TIMEZONE=Asia/Kolkata
CORS_ALLOW_ORIGINS=https://admin-ui.railway.app,https://doctor-ui.railway.app,https://chatbot-ui.railway.app
DEBUG=False
MAX_AVAILABILITY_DAYS=30
MAX_AVAILABILITY_RESULTS=200

# ============================================================
# ADMIN PORTAL API (admin_portal/Dockerfile)
# ============================================================
DATABASE_URL=postgresql://user:pass@host:5432/calendar_booking_db
ADMIN_PORTAL_JWT_SECRET=your-admin-jwt-secret
ADMIN_PORTAL_JWT_ALGORITHM=HS256
ADMIN_PORTAL_ACCESS_TOKEN_EXPIRE_MINUTES=60
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD_HASH=$2b$12$your-bcrypt-hash-here
CORE_API_BASE=https://your-core-api.railway.app
PORTAL_API_BASE=https://your-doctor-api.railway.app/portal
ADMIN_PORTAL_CORS_ORIGINS=https://admin-ui.railway.app

# ============================================================
# DOCTOR PORTAL API (doctor_portal/Dockerfile)
# ============================================================
DATABASE_URL=postgresql://user:pass@host:5432/calendar_booking_db
DOCTOR_PORTAL_JWT_SECRET=your-doctor-jwt-secret
DOCTOR_PORTAL_JWT_ALGORITHM=HS256
DOCTOR_PORTAL_ACCESS_TOKEN_EXPIRE_MINUTES=60
DOCTOR_PORTAL_REFRESH_TOKEN_EXPIRE_MINUTES=43200
DOCTOR_PORTAL_OAUTH_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
DOCTOR_PORTAL_OAUTH_CLIENT_SECRET=your-google-oauth-secret
DOCTOR_PORTAL_OAUTH_REDIRECT_URI=https://your-doctor-api.railway.app/portal/auth/oauth/google/callback
DOCTOR_PORTAL_FRONTEND_CALLBACK_URL=https://doctor-ui.railway.app/oauth/callback
DOCTOR_PORTAL_CORS_ORIGINS=https://doctor-ui.railway.app

# ============================================================
# CHATBOT API (chatbot-service/Dockerfile)
# ============================================================
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=1000
CALENDAR_SERVICE_URL=https://your-core-api.railway.app
CALENDAR_SERVICE_API_KEY=your-secure-api-key-here
REDIS_URL=redis://default:pass@host:6379
CORS_ALLOW_ORIGINS=https://chatbot-ui.railway.app

# ============================================================
# ADMIN PORTAL FRONTEND (admin-portal-frontend/Dockerfile)
# ============================================================
VITE_API_BASE_URL=https://admin-api.railway.app
VITE_CORE_API_BASE=https://your-core-api.railway.app
VITE_PORTAL_API_BASE=https://your-doctor-api.railway.app/portal

# ============================================================
# DOCTOR PORTAL FRONTEND (doctor-portal-frontend/Dockerfile)
# ============================================================
VITE_API_BASE_URL=https://your-doctor-api.railway.app
VITE_GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
VITE_OAUTH_REDIRECT_URI=https://your-doctor-api.railway.app/portal/auth/oauth/google/callback

# ============================================================
# CHATBOT FRONTEND (chatbot-frontend/Dockerfile)
# ============================================================
REACT_APP_CHATBOT_API_URL=https://chatbot-api.railway.app
REACT_APP_CALENDAR_API_URL=https://your-core-api.railway.app
